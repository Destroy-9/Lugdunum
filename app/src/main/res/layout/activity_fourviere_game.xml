<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".games.FourviereGameActivity">

    <TextView
        android:id="@+id/endroit"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Question?"></TextView>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".games.FourviereGameActivity">

        <ImageView
            android:id="@+id/statue1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/stat1"
            android:focusable="true" />


        <ImageView
            android:id="@+id/statue2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/stat2"
            android:focusable="true" />
        <ImageView
            android:id="@+id/statue3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/stat3"
            android:focusable="true" />

        <ImageView
            android:id="@+id/statue4"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/stat4"
            android:focusable="true" />


    </LinearLayout>
</LinearLayout>
